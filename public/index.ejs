<!DOCTYPE html>
<html lang="en"> 
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TODO APP</title>
    <link rel="stylesheet" href="/1.css">
</head>
<body>
<div id="heading">TODO APP</div>
<div id="lrparent">
    <div id="leftpane">
        <ul id="todo-list">
            <% x.forEach(item => { %>
                <li id="<%= item._id %>">
                    <span class="<%= item.Check_status ? 'completed' : '' %>"><%= item.name %></span>
                    <input type="checkbox" class="checkbox_status" id="<%= item._id %>" <%= item.Check_status ? 'checked' : '' %>>
                    <img src="pinwheel.png" class="delete_button" height="10px" width="10px" id="<%= item._id %>">
                </li>
            <% }) %>
        </ul>
    </div>
    <div id="rightpane">
        <textarea id="input_data"></textarea>
        <button id="data_submit_button" type="submit">Submit</button>
    </div>
</div>

<script src="index.js"></script>
</body>
</html>